# Home page
GET         /                          controllers.Application.index
#default list showing current week
GET         /workouts                  controllers.Workouts.index
#list showing workouts in given date range
GET         /workouts/:from/:to        controllers.Workouts.list(from: String, to: String)
#detailed view of specific workout
GET         /workouts/:id              controllers.Workouts.show(id: Int)
#create new workout
POST        /workouts                  controllers.Workouts.add

#display report for current week
GET         /report                    controllers.Report.index
#display report for each week in given range
GET         /report/:from/:to          controllers.Report.list(from: String, to: String)





# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.at(path="/public", file)
